<div id="options">
  <div class="btn-group" id="order-button">
    <button type="button" class="btn btn-primary dropdown-toggle"
     data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Order By <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "Company", listings_path(search: params[:search],
        order: :company_id, open_jobs: params[:open_jobs]), method: :get %></li>
      <li><%= link_to "Job Title", listings_path(search: params[:search],
        order: :job_title, open_jobs: params[:open_jobs]), method: :get %></li>
      <li><%= link_to "Wage", listings_path(search: params[:search],
        order: :wage, open_jobs: params[:open_jobs]), method: :get %></li>
      <li><%= link_to "Hours", listings_path(search: params[:search],
        order: :hours_weekly, open_jobs: params[:open_jobs]), method: :get %></li>
      <li><%= link_to "Shift", listings_path(search: params[:search],
        order: :shift, open_jobs: params[:open_jobs]), method: :get %></li>
      <li><%= link_to "Start Date", listings_path(search: params[:search],
        order: :start_date, open_jobs: params[:open_jobs]), method: :get %></li>
      <li><%= link_to "Est. End Date", listings_path(search: params[:search],
        order: :est_end_date, open_jobs: params[:open_jobs]), method: :get %></li>
    </ul>
  </div>
  <div class="btn-group" id="open_jobs">
    <%= link_to "Open Jobs", listings_path(search: params[:search],
    order: params[:order], open_jobs: true), class: "btn btn-success",
    method: :get %>
  </div>
  <div class="btn-group" id="all_jobs">
    <%= link_to "All Jobs", listings_path(order: params[:order]),
    class: "btn btn-danger", method: :get %>
  </div>
</div>
